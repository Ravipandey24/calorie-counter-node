# Database Configuration
# Supabase Database URL with connection pooling (recommended for production)
# Get this from your Supabase project settings > Database > Connection String
# Make sure to replace the password placeholder with your actual database password
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# External APIs
USDA_API_KEY=your_usda_api_key_here

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required_for_security
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000 